<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/" id="brandName">Navbar</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link {{#if homeView}} active {{/if}}" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/perfil" id="linkPerfil">Perfil</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/reclamos" id="linkReclamos">Reclamos</a>
        </li>
        <li class="nav-item"></li>
          <a class="nav-link {{#if loginView}} active {{/if}}" href="/login" id="linkLogin">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="" id="linkLogout">Logout</a>
        </li>
      </ul>
    </div>
  </div>
</nav>


<style>
    .active {
        font-weight: 900;
        text-decoration: underline;
    }

</style>


<script>
    let linkLogin = document.getElementById("linkLogin");
    let linkLogout = document.getElementById("linkLogout");
    let linkPerfil = document.getElementById("linkPerfil");
    let brandName = document.getElementById("brandName");

    let token = localStorage.getItem("token");

    if(token){
        let usuario = localStorage.getItem("usuario");
        usuario = JSON.parse(usuario);
        brandName.innerText = usuario.email;
        linkLogin.style.display = "none";
    }else{
        linkLogout.style.display = "none";
        linkPerfil.style.display = "none";
    }


    linkLogout.addEventListener("click", (event) => {
        event.preventDefault();
        localStorage.clear();
        location.href = "/";
    })


    linkPerfil.addEventListener("click", (event) => {
        event.preventDefault();
        location.href = "/perfil/"+token
    })
</script>